{{#if isUpdateShowing}}
  <h4> update {{post.title}} </h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=post.title}}
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content" placeholder=post.content}}
        </div>
        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=post.image}}
        </div>
        <button {{action 'update' post}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
