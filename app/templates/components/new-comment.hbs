{{#if addNewComment}}
<h3>Add New Comment</h3>
<div>
  <form>
    <div class="form-group">
      <label for="author">Enter Name</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="content">Enter Comment</label>
      {{input value=content id="content"}}
    </div>
    <button {{action 'saveComment'}}>Save Comment</button>
  </form>
</div>
{{else}}
  <button {{action 'commentFormShow'}}>addComment</button>
{{/if}}
