{{#if addNewPost}}
<h1>New Blog Post</h1>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{input value=content id="content"}}
    </div>
    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>
    <button {{action 'addPost'}}>Add Post</button>
  </form>
</div>
{{else}}
  <button {{action 'postFormShow'}}>New Post</button>
{{/if}}
